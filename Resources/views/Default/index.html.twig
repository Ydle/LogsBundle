{% extends "YdleHubBundle::layout.html.twig" %}

{% block title %}{{ "title.logs" | trans}}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Logs</h3>
                <div class="box-tools pull-right">
                    <button data-widget="collapse" class="btn btn-primary btn-xs"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body ajax-loading table-responsive" id="logs-list" data-endpoint="/logs/list.json" data-template="logs-list">
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="box" data-template="logs-list">
            {{ include ('YdleLogsBundle:Default:form.html.twig', {'form': form}) }}
        </div>
        <div class="box" data-template="logs-list">
            <div class="box-header">
                <h3 class="box-title">{{ "delete.logs.title" | trans }}</h3>
            </div>
            <div class="box-body">
                <p>{{ "delete.logs.text" | trans }}</p>
                <a href="/logs/list.json" class="btn btn-danger btn-lg ajax-button" data-action="DELETE" data-endpoint="/logs/list.json" data-reload="logs-list" onclick="return confirm('{{ "delete.logs.confirm" | trans }}');" >{{ "delete.logs.button" | trans }}</a>
            </div>
        </div>
    </div> 
</div>      
{% endblock %}

